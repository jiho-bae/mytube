extends layouts/main

block content
    .form-container
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar
                input(type="file", id="avatar", name="프로필 사진", accept="image/*")
            input(type="text", placeholder="Name", name="이름", value=loggedUser.name)
            input(type="email", placeholder="Email", name="이메일", value=loggedUser.email)
            input(type="submit" , value="프로필 업데이트")